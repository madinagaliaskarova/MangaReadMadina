<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBarTheme">
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">#d1e4ff</item>
        <item name="colorSecondaryContainer">@color/primary</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/from_right</item>
        <item name="android:windowExitAnimation">@anim/to_right</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/light_green</item>
        <item name="android:textColorSecondary">@color/light_green</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseMainTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="BaseTextViewPrice" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="BaseSearchView" parent="Widget.AppCompat.EditText">
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">Поиск</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="BaseCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_height">190dp</item>
    </style>
    <style name="BaseClickableText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
    </style>
</resources>